                        </td>

                        <td>
                            #set( $d = $algoResult.satisfiedPregroupStats() )
                            students: #fraction( $d.studentsTogether(), $d.numTotalPregroupingStudents() )<br>
                            groups: #fraction( $d.groupsTogether(), $d.numTotalPregroups() )
                        </td>

                        <td>
                            Metric: #metric( $algoResult.unsatisfiedProjectStats() )<br>
                            Profile: $algoResult.unsatisfiedProjectStats().profile()
                        </td>
                    </tr>
                    #set( $rowNum = $rowNum + 1 )
                    #end

                #* add space *#
                <tr style="display: block; padding-top: 1em;"></tr>

            #end

